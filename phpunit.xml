<?xml version="1.0" encoding="UTF-8"?>
<phpunit backupGlobals="false"
	bootstrap="test/bootstrap.php"
	backupStaticAttributes="false"
	colors="true"
	convertErrorsToExceptions="true"
	convertNoticesToExceptions="true"
	convertWarningsToExceptions="true"
	processIsolation="false"
	stopOnFailure="false"
	syntaxCheck="false"
>
	<testsuites>
		<testsuite name="Resque Test Suite">
			<directory>lib/Resque/Tests</directory>
		</testsuite>
	</testsuites>

	<filter>
		<whitelist>
			<directory suffix=".php">lib/Resque</directory>
			<directory suffix=".php">lib/Resque/Util</directory>
			<directory suffix=".php">lib/Resque/Job</directory>
			<directory suffix=".php">lib/Resque/Failure</directory>
			<directory suffix=".php">lib/Resque/Exception</directory>
		</whitelist>
	</filter>
</phpunit>
